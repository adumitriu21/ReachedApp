<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.TeacherMainMenu"
    android:background="#fcde9c">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_admin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Announcement or Event"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/parentEmail"
        android:layout_width="309dp"
        android:layout_height="36dp"
        android:hint="Please enter the email here"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="25dp"
        android:textSize="19sp"
        android:layout_marginBottom="@color/black"
        android:background="@drawable/bg_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course :"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="309dp"
        android:layout_height="35dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="25dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/bg_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="25dp" />


    <CalendarView
        android:id="@+id/announcementCalendarView"
        android:layout_width="309dp"
        android:layout_height="305dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/addAnnouncementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="679dp"
        android:text="CONFIRM" />

</RelativeLayout>