<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teacher_attendance_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Views.TeacherAttendanceView"
   >

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <TextView
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_height="wrap_content"
                android:text="Attendance Report For:" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/day"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday" />

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/date"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022-11-10" />




            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Inside text input layout add
                      an auto complete text view
                        and make its input type to none-->
                <AutoCompleteTextView
                    android:id="@+id/homeroomSelect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:hint="Grade and Section Selection ..."
                    />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/submitAttendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Submit Attendance"></Button>

                <EditText
                    android:id="@+id/searchByName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search By Name"
                    android:layout_margin="15dp"
                    android:textSize="24dp"
                    android:layout_below="@+id/submitAttendance">
                </EditText>
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/studentsList"
                tools:listitem="@layout/item_students_list"
                tools:itemCount="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>





</ScrollView>